{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "exac-controller",
    "labels": {
      "state": "serving"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "exac-app"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "exac-app"
        }
      },
      "spec": {
        "volumes": null,
        "containers": [
          {
            "name": "exac-serve",
            "image": "macarthurlab/exacserve",
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "imagePullPolicy": "Always"
          },
          {
            "name": "exac-load",
            "image": "macarthurlab/exacload",
            "imagePullPolicy": "Always"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}