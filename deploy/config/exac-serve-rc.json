{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "exac-serve",
    "labels": {
      "state": "serving"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "exac-app"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "exac-app"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "exacv1-readviz",
            "gcePersistentDisk": {
              "pdName": "exacv1-readviz",
              "fsType": "ext4",
              "readOnly": true
            }
          }
        ],
        "containers": [
          {
            "name": "exac-serve",
            "image": "gcr.io/exac-gnomad/exacserve",
            "ports": [
              {
                "containerPort": 80,
                "protocol": "TCP"
              }
            ],
            "volumeMounts": [
              {
                "name": "exacv1-readviz",
                "mountPath": "/readviz"
              }
            ],
            "securityContext": {
              "privileged": true,
              "capabilities": {
                "add": [
                  "NET_ADMIN"
                ]
              }
            },
            "imagePullPolicy": "Always"
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
      }
    }
  }
}